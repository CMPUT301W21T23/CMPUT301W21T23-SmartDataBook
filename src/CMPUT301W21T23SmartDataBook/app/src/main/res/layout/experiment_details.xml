<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/MaxTrials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ClickedExpRegion"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="67dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="91dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/MinTrials"
            android:text="Max Trials: "
            android:textColor="@color/theme_default"
            android:textSize="17sp">

        </TextView>

        <TextView
            android:id="@+id/ClickedExpName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="128dp"
            android:layout_marginEnd="128dp"
            android:layout_marginBottom="10dp"
            android:text="EXPERIMENT NAME"
            android:textColor="@color/theme_default"
            android:textSize="17sp">

        </TextView>

        <TextView
            android:id="@+id/ClickedExpRegion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ClickedExpName"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="175dp"
            android:layout_marginBottom="10dp"
            android:text="REGION"
            android:textColor="@color/theme_default"
            android:textSize="17sp">

        </TextView>

        <TextView
            android:id="@+id/MinTrials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ClickedExpRegion"
            android:layout_alignParentStart="true"
            android:layout_marginStart="84dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="10dp"
            android:text="Min Trials: "
            android:textColor="@color/theme_default"
            android:textSize="17sp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="TYPE OF EXPERIMENT"
            android:id="@+id/ExpType"
            android:layout_centerHorizontal="true"
            android:textColor="@color/theme_default"
            android:layout_below="@id/MinTrials"
            android:layout_marginBottom="10dp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="DESCRIPTION PARAGRAPH"
            android:id="@+id/ClickedExpDesc"
            android:layout_centerHorizontal="true"
            android:textColor="@color/theme_default"
            android:layout_below="@id/ExpType"
            android:layout_marginBottom="10dp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="PUBLISH"
            android:id="@+id/Publish"
            android:layout_centerHorizontal="true"
            android:textColor="@color/theme_default"
            android:layout_below="@id/ClickedExpDesc"
            android:layout_marginBottom="35dp">
        </TextView>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="245dp"
            android:layout_below="@id/ClickedExpDesc"
            android:layout_marginTop="-12dp"
            android:layout_marginBottom="10dp">
        </CheckBox>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIEW STATS"
            app:backgroundTint="@null"
            android:background="@color/theme_default"
            android:layout_below="@id/Publish"
            android:layout_centerHorizontal="true"
            android:id="@+id/ViewStatsBTN"
            android:layout_marginBottom="30dp">
        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPLOAD TRIALS"
            app:backgroundTint="@null"
            android:background="@color/theme_default"
            android:layout_below="@id/ViewStatsBTN"
            android:layout_centerHorizontal="true"
            android:id="@+id/UploadTrialsBTN"
            android:layout_marginBottom="40dp">
        </Button>
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/white"
            android:src="@drawable/ic_map_button_foreground"
            app:backgroundTint="@null"
            android:layout_below="@id/UploadTrialsBTN"
            android:layout_marginLeft="40dp"
            android:id="@+id/mapButton"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHOW MAP"
            android:textColor="@color/theme_default"
            android:layout_below="@id/UploadTrialsBTN"
            android:layout_toRightOf="@id/mapButton"
            android:layout_marginLeft="10dp"
            android:id="@+id/ShowMap"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            >
        </TextView>

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/white"
            android:src="@drawable/ic_generate_code_foreground"
            app:backgroundTint="@null"
            android:layout_below="@id/mapButton"
            android:layout_marginLeft="40dp"
            android:id="@+id/generateCodeBTN"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GENERATE/REGISTER CODE"
            android:textColor="@color/theme_default"
            android:layout_below="@id/ShowMap"
            android:layout_toRightOf="@id/generateCodeBTN"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:id="@+id/generateCodeTextView"
            >
        </TextView>

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/white"
            android:src="@drawable/ic_ask_question"
            app:backgroundTint="@null"
            android:layout_below="@id/generateCodeBTN"
            android:layout_marginLeft="40dp"
            android:id="@+id/askQuestionsBTN"
            android:layout_marginBottom="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ASK QUESTIONS"
            android:textColor="@color/theme_default"
            android:layout_below="@id/generateCodeTextView"
            android:layout_toRightOf="@id/askQuestionsBTN"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:id="@+id/askQuestionsTextView"
            >
        </TextView>

        <Button
            android:id="@+id/endExp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/askQuestionsBTN"
            android:layout_marginLeft="40dp"
            android:background="@color/theme_default"
            android:text="END EXPERIMENT"
            android:textColor="@color/white"
            app:backgroundTint="@null">

        </Button>

        <TextView
            android:id="@+id/owner"
            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ClickedExpName"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="91dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="62dp"
            android:text="Owner"
            android:textColor="@color/theme_default"
            android:textSize="17sp" />

    </RelativeLayout>

</LinearLayout>