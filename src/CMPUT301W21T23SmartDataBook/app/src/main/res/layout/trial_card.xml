<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#faf5ff"
        android:descendantFocusability="blocksDescendants"
        android:id="@+id/linearLayout">

    <TextView
            android:id="@+id/trial_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="trial value"
            android:textColor="@color/theme_default"
            android:textSize="23sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginStart="19dp" />

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/trial_date"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="1dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent" />

    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/trial_author"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="19dp"
            app:layout_constraintTop_toBottomOf="@+id/trial_value"
            app:layout_constraintEnd_toStartOf="@+id/trial_date"
            android:layout_marginEnd="20dp" />


</androidx.constraintlayout.widget.ConstraintLayout>

